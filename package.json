{
  "name": "@scuderia-fe/atlas-generator",
  "description": "Generate a spritesheet atlas from a folder of images",
  "version": "0.1.0",
  "module": "lib/index.ts",
  "type": "module",
  "devDependencies": {
    "@napi-rs/cli": "^2.16.5",
    "@taplo/cli": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "bun-types": "1.0.11",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.0.3",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": [
      "bun lint-staged"
    ]
  },
  "lint-staged": {
    "*.{ts,cjs,mjs}": [
      "prettier --write --",
      "eslint --fix --max-warnings=0 --"
    ],
    "*.toml": [
      "taplo fmt --"
    ],
    "*.rs": [
      "cargo fmt --"
    ],
    "*.json": [
      "prettier --write --"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "engines": {
    "node": "18"
  },
  "packageManager": "bun@1.0.11"
}
